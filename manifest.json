{
  "manifest_version": 2,
  "name": "Keywi",
  "version": "0.1.0beta4",
  "description": "Minimalistic Keepass plugin using Web Extensions and KeepassHTTP",
  "icons": {
    "48": "icons/keywi-48.png",
    "96": "icons/keywi-96.png"
  },
  "background": {
    "scripts": [
      "vendor/reqwest.js",
      "vendor/utf8.js",
      "vendor/aes.js",
      "vendor/cryptoHelpers.js",
      "vendor/debounce.js",
      "background/Crypto.js",
      "background/keepass.js",
      "background/securestorage.js",
      "background/LocalSecureStorage.js",
      "background/LocalSecureStorage.prompts.js",
      "background/contextmenu.js",
      "background/commands.js",
      "background/init.js"
    ]
  },
  "permissions": [
    "http://localhost/",
    "<all_urls>",
    "contextMenus",
    "tabs",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/fix-contentEditable.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/fill-username-and-password.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "commands": {
    "fill-form": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Fill the username/password field from the currently active field"
    },
    "fill-password": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Fill your password in the currently active field"
    }
  },
  "applications": {
    "gecko": {
      "id": "keywi-ff-add-on@ledfan.be",
      "strict_min_version": "51.0"
    }
  }
}
